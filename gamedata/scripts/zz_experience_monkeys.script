-- Give the actor experience for looting a mutant
UIMutantOnLoot = ui_mutant_loot.UIMutantLoot.Loot

-- Compatibility patch for Food Degradation mod
if zzzz_food_degradation_z_ui_mutant_loot then
	UIMutantOnLoot = zzzz_food_degradation_z_ui_mutant_loot.ui_mutant_loot.UIMutantLoot.Loot
end

function ui_mutant_loot.UIMutantLoot:Loot(loot_all)
	local obj_mutant = level.object_by_id(self.id)
	if (not obj_mutant) then
		self:Close()
		return
	end
	
	local loot_count = 0
	
	if loot_all then
		local tbl = self.loot
		for sec,t in pairs(tbl) do
			for i=1,t.count do
				loot_count = loot_count + 1
			end
		end
	else
		for idx,ci in pairs(self.CC.cell) do
			if ci.flags.selected then
				loot_count = loot_count + 1
			end
		end
	end
	
	UIMutantOnLoot(self, loot_all)
	experience_core.give_actor_experience_by_mutant_loot(loot_count)
end

