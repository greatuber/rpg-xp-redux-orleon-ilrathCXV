-- Give the actor experience for work on a workbench
UIWorkShopOnCraft		= ui_workshop.UIWorkshopCraft.Craft
UIWorkShopOnRepair		= ui_workshop.UIWorkshopRepair.Repair
UIWorkShopOnUpgrade		= ui_workshop.UIWorkshopUpgrade.Upgrade

-- Compatibility patch for Keep Crafting Windows Opened mod
if zz_ui_workshop_keep_crafting_window_open then
	UIWorkShopOnCraft		= zz_ui_workshop_keep_crafting_window_open.ui_workshop.UIWorkshopCraft.Craft
	UIWorkShopOnRepair		= zz_ui_workshop_keep_crafting_window_open.ui_workshop.UIWorkshopRepair.Repair
	UIWorkShopOnUpgrade		= zz_ui_workshop_keep_crafting_window_open.ui_workshop.UIWorkshopUpgrade.Upgrade
end

function ui_workshop.UIWorkshopCraft:Craft()
	if (not self.craft_allow_r) then 
		return 
	end
	
	local cnt = #self.craft_item
	
	UIWorkShopOnCraft(self)
	experience_core.give_actor_experience_by_workshop("craft", cnt)
end

function ui_workshop.UIWorkshopRepair:Repair()
	local obj = self.CC["inventory"]:GetCell_Selected(true)
	if (not obj) then
		return
	end
	
	local cnt = 0
	
	if is_not_empty(self.new_con) then
		for i=1,6 do
			if self.parts[i] and self.parts[i].sec and (self.parts[i].sec ~= "na") then
				if self.new_con[i] and self.new_con[i].id then
					cnt = cnt + 1
				end
			end
		end
	else
		print_ws("! UIWorkshopRepair:Repair() | no new parts have been replaced")
		return
	end
	
	UIWorkShopOnRepair(self)
	experience_core.give_actor_experience_by_workshop("repair", cnt)
end

function ui_workshop.UIWorkshopUpgrade:Upgrade()
	local obj = self.CC:GetCell_Selected(true)
	if (not obj) then
		return
	end
	
	local cnt = 0
	
	for k, v in pairs(self.inst_upgr) do
		if (not obj:has_upgrade(k)) then
			cnt = cnt + 1
		end
	end
	
	UIWorkShopOnUpgrade(self)
	experience_core.give_actor_experience_by_workshop("upgrade", cnt)
end

